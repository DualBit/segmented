<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SegmentedButton">
        <!-- General attrs -->
        <attr name="segmentHeight" format="dimension" />
        <attr name="segmentColor" format="color" />
        <attr name="segmentColorChecked" format="color" />
        <attr name="rippleColor" format="color" />
        <attr name="rippleColorChecked" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />

        <attr name="spreadType" format="enum">
            <enum name="evenly" value="0" />
            <enum name="wrap" value="1" />
        </attr>

        <!-- TextSegment attrs -->
        <attr name="title" format="string" />
        <attr name="subTitle" format="string" />
        <attr name="upperTitle" format="string" />

        <attr name="titlePosition" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>

        <attr name="segmentGravity" format="enum">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>

        <attr name="upperTitlePosition" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>

        <attr name="subTitlePosition" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>

        <attr name="textSize" format="dimension" />
        <attr name="subTitleTextSize" format="dimension" />
        <attr name="upperTitleTextSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="subTitleTextColor" format="color" />
        <attr name="upperTitleTextColor" format="color" />
        <attr name="textColorChecked" format="color" />
        <attr name="subTitleTextColorChecked" format="color" />
        <attr name="upperTitleTextColorChecked" format="color" />
        <attr name="segmentFont" format="reference" />
        <attr name="subTitleSegmentFont" format="reference" />
        <attr name="upperTitleSegmentFont" format="reference" />
        <attr name="segmentFontChecked" format="reference" />
        <attr name="subTitleSegmentFontChecked" format="reference" />
        <attr name="upperTitleSegmentFontChecked" format="reference" />

    </declare-styleable>

