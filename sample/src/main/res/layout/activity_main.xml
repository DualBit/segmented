<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <com.creageek.segmentedbutton.SegmentedButton
        android:id="@+id/courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:borderColor="#9ABCA7"
        app:rippleColorChecked="#ffffff"
        app:segmentColorChecked="#9ABCA7"
        app:spreadType="evenly"
        app:textColor="#9ABCA7">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Newest" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Rated" />
    </com.creageek.segmentedbutton.SegmentedButton>

    <com.creageek.segmentedbutton.SegmentedButton
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:borderColor="#E9724C"
        app:borderWidth="4dp"
        app:cornerRadius="0dp"
        app:rippleColorChecked="#FFC857"
        app:segmentColor="#FFC857"
        app:segmentColorChecked="#E9724C"
        app:spreadType="evenly"
        app:textColor="#E9724C"
        app:textColorChecked="#FFC857">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomorrow" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This week" />
    </com.creageek.segmentedbutton.SegmentedButton>

    <com.creageek.segmentedbutton.SegmentedButton
        android:id="@+id/rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:borderWidth="0dp"
        app:cornerRadius="24dp"
        app:rippleColorChecked="#6DAEDB"
        app:segmentColor="#6DAEDB"
        app:segmentColorChecked="#1D70A2"
        app:spreadType="evenly"
        app:textColor="#ffffff"
        app:textColorChecked="#ffffff">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S3" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S4" />
    </com.creageek.segmentedbutton.SegmentedButton>

    <com.creageek.segmentedbutton.SegmentedButton
        android:id="@+id/wrapped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:borderColor="#E9806E"
        app:borderWidth="2dp"
        app:cornerRadius="10dp"
        app:rippleColorChecked="#FFE66D"
        app:segmentColor="#FFE66D"
        app:segmentColorChecked="#8EA604"
        app:spreadType="wrap"
        app:textColorChecked="#F7FFF7">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Center" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laaaaaaaaast" />
    </com.creageek.segmentedbutton.SegmentedButton>

    <com.creageek.segmentedbutton.SegmentedButton
        android:id="@+id/custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:segmentHeight="64dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 personer"
                android:textColor="@drawable/custom_segment_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="second line"
                android:textColor="@drawable/custom_segment_selector" />
        </LinearLayout>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 personer" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />
    </com.creageek.segmentedbutton.SegmentedButton>

    <com.creageek.segmentedbutton.SegmentedButton
        android:id="@+id/segmented"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:segmentFont="@font/kalam_light"
        app:segmentFontChecked="@font/kalam_bold"
        app:spreadType="evenly" />
</LinearLayout>